{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"]
  },
  "exclude": ["node_modules", "dist"]
}