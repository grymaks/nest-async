{
  "name": "nest-async",
  "version": "1.0.0",
  "description": "Kafka integration for NestJS based on kafkajs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prepare": "yarn build",
    "test": "jest"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.9.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.3",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
    "@types/node": "^24.0.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
    "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
